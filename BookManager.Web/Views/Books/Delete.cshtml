@model BookManager.Domain.Models.Book;

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container p-4">
    <div class="row pb-2">
        <form asp-action="Delete" method="post" onsubmit="return confirm('Do you really want to delete the record?');" class="col-md-7 ms-auto me-auto border border-primary p-3">
            <input type="hidden" asp-for="@Model.Id" />
            <div class="card mb-3">
                <h3 class="card-header">@Model.Title</h3>
                <div class="card-body">
                    <h6 class="card-subtitle text-muted">Author: <span class="text-primary">
                        @Model.Author.Name
                        </span></h6>
                </div>
                <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                    <rect width="100%" height="100%" fill="#868e96"></rect>
                    <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
                </svg>
                <div class="card-body">
                    <p class="card-text">@Model.Description</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Category: <b>
                        @Model.Category.Name
                        </b></li>
                    <li class="list-group-item">Number of Pages: <b>@Model.ToTalPage</b></li>
                </ul>
                <div class="card-footer text-muted">
                    Published On: <span class="text-info">@Model.PublishedDate.ToString("dd/MM/yyyy")</span>
                </div>
            </div>
            <button class="btn btn-sm btn-danger" type="submit"><i class="bi bi-trash"></i>&nbsp;Delete</button>
            <a asp-controller="Books" asp-action="Index" class="btn btn-sm btn-light"><i class="bi bi-arrow-left-circle-fill"></i>&nbsp;Back to List</a>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_Alert" />
}



