@model BookManager.Domain.Models.Category;

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container p-4">
    <div class="row pb-2">
        <form asp-action="Delete" method="post" onsubmit="return confirm('Do you really want to delete the record?');" class="col-md-6 ms-auto me-auto border border-primary p-3">
            <input type="hidden" asp-for="@Model.Id" />
            <h4>Delete Category</h4>
            <hr />
            <div class="mb-2">
                <label asp-for="Name" class="col-form-label"></label>
                <input class="form-control" asp-for="Name" disabled />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <button class="btn btn-sm btn-danger" type="submit"><i class="bi bi-trash"></i>&nbsp;Delete</button>
            <a asp-controller="Categories" asp-action="Index" class="btn btn-sm btn-light"><i class="bi bi-arrow-left-circle-fill"></i>&nbsp;Back to List</a>
        </form>
    </div>
</div>

@section Scripts
    {
    <partial name="_Alert" />
}

