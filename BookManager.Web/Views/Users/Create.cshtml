@model BookManager.Domain.Models.User;

@{
    ViewData["Title"] = "New User";
}

<div class="container p-4">
    <div class="row pb-2">
        <form asp-action="Create" method="post" class="col-md-6 ms-auto me-auto border border-primary p-3">
            <h4>New User</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-2">
                <label asp-for="Name" class="col-form-label"></label>
                <input class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label asp-for="UserName" class="col-form-label"></label>
                <input class="form-control" asp-for="UserName" />
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Role" class="col-form-label"></label>
                <input class="form-control" asp-for="Role" />
                <span class="text-danger" asp-validation-for="Role"></span>
            </div>
            <div class="mb-3">
                <div class="form-check form-switch">
                    <input asp-for="Status" class="form-check-input" type="checkbox">
                    <label asp-for="Status" class="form-check-label">Is Active</label>
                </div>
            </div>

            <button class="btn btn-sm btn-success" type="submit"><i class="bi bi-save-fill"></i>&nbsp;Save</button>
            <a asp-controller="Users" asp-action="Index" class="btn btn-sm btn-light"><i class="bi bi-arrow-left-circle-fill"></i>&nbsp;Back to List</a>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}

