@model BookManager.Web.ViewModels.Users.EditUserViewModel;

@{
    ViewData["Title"] = "Delete User";
}

<div class="container p-4">
    <div class="row pb-2">
        <form asp-action="Delete" method="post" onsubmit="return confirm('Do you really want to delete the record?');" class="col-md-6 ms-auto me-auto border border-primary p-3">
            <input type="hidden" asp-for="@Model.Id" />
            <h4>Delete User</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="mb-2">
                <label asp-for="Name" class="col-form-label"></label>
                <input class="form-control" asp-for="Name" disabled />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="mb-3">
                <label asp-for="UserName" class="col-form-label"></label>
                <input class="form-control" asp-for="UserName" disabled />
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Role" class="col-form-label"></label>
                <input class="form-control" asp-for="Role" disabled />
                <span class="text-danger" asp-validation-for="Role"></span>
            </div>
            <div class="mb-3">
                <div class="form-check form-switch">
                    <input asp-for="Status" class="form-check-input" type="checkbox" disabled>
                    <label asp-for="Status" class="form-check-label">Is Active</label>
                </div>
            </div>

            <button class="btn btn-sm btn-danger" type="submit"><i class="bi bi-trash"></i>&nbsp;Delete</button>
            <a asp-controller="Users" asp-action="Index" class="btn btn-sm btn-light"><i class="bi bi-arrow-left-circle-fill"></i>&nbsp;Back to List</a>
        </form>
    </div>
</div>

@section Scripts
    {
    <partial name="_Alert" />
}
